# --- Panelin Environment Variables Example ---
# Rename this file to .env and fill in your values.

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ASSISTANT_ID=asst_7LdhJMasW5HHGZh0cgchTGkX

# Public base URL for OpenAPI "servers" (use your Cloud Run URL in production)
# Example: https://panelin-api-xxxxx-uc.a.run.app
PUBLIC_BASE_URL=

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google / Gemini Configuration (Optional)
GOOGLE_API_KEY=your_google_api_key_here

# Google Sheets Integration
# Path to the service account JSON credentials file
GOOGLE_SHEETS_CREDENTIALS=credentials/google_sheets_credentials.json

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://localhost:27017
MONGODB_DATABASE_NAME=panelin

# Facebook API Configuration
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here
FACEBOOK_PAGE_ID=your_facebook_page_id_here
FACEBOOK_API_VERSION=v18.0

# Instagram API Configuration
INSTAGRAM_APP_ID=your_instagram_app_id_here
INSTAGRAM_APP_SECRET=your_instagram_app_secret_here
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_account_id_here
INSTAGRAM_API_VERSION=v18.0

# MercadoLibre API Configuration
MERCADOLIBRE_ACCESS_TOKEN=your_mercadolibre_access_token_here
MERCADOLIBRE_USER_ID=your_mercadolibre_user_id_here

# Project Paths
# Root of the project (defaults to current directory if not set)
PROJECT_ROOT=.
# Path to Knowledge Base files
KB_PATH=Files
