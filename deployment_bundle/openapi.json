    "/autoportancia/validate": {
      "get": {
        "tags": [
          "Technical"
        ],
        "summary": "Validate Autoportancia",
        "description": "Valida si un panel cumple con autoportancia para la luz dada. Devuelve cumple/no cumple, margen de seguridad y recomendación.",
        "operationId": "validate_autoportancia_get",
        "parameters": [
          {
            "name": "product_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "description": "ID del producto (ej: ISODEC_EPS)",
              "title": "Product ID"
            }
          },
          {
            "name": "thickness_mm",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "description": "Espesor del panel en mm",
              "title": "Thickness MM"
            }
          },
          {
            "name": "luz_m",
            "in": "query",
            "required": true,
            "schema": {
              "type": "number",
              "description": "Distancia entre apoyos en metros",
              "title": "Luz M"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Resultado de validación de autoportancia",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AutoportanciaResult"
