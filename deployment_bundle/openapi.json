            "default": false
          },
          "include_tax": {
            "type": "boolean",
            "title": "Include Tax",
            "description": "Incluir IVA (22%)",
            "default": true
          },
          "installation_type": {
            "type": "string",
            "enum": [
              "techo",
              "pared"
            ],
            "title": "Installation Type",
            "description": "Tipo de instalación",
            "default": "techo"
          }
        },
        "type": "object",
        "required": [
          "product_id",
          "length_m",
          "width_m"
