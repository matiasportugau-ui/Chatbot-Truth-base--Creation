                "schema": {
                  "$ref": "#/components/schemas/PriceInfo"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
    "/products/{product_id}/availability": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Get Availability",
